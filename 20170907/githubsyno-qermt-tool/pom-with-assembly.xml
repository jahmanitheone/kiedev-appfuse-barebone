<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.synodex</groupId>
	<artifactId>qermt-tool</artifactId>
	<version>v0.0.0.0</version>
	<name>com.synodex-qermt-tool</name>
	<description>Synodex QCAI Engine Rules Management Tool</description>

	<prerequisites>
		<maven>2.2.1</maven>
	</prerequisites>

	<properties>
		<appfuse.version>2.1.0</appfuse.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<junit.version>4.8.2</junit.version>
		<project.build.environment>loc</project.build.environment>
	</properties>

	<scm>
		<connection>scm:svn:https://youruserid:password@virnwjhpv04clnx.newjersey.innodata.net:8080/svn/synodex/trunk/synodexqcai-engine-drools</connection>
		<developerConnection>scm:svn:https://youruserid:password@virnwjhpv04clnx.newjersey.innodata.net:8080/svn/synodex/trunk/synodexqcai-engine-drools</developerConnection>
	</scm>


	<build>
		<finalName>com.synodex-qermt-tool</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<mainClass>com.synodex.qermt.tool.main.Main</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<tasks>
						<echo>Displaying Environment variables</echo>
					</tasks>

					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<version>1.0</version>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<doCheck>false</doCheck>
					<doUpdate>false</doUpdate>
					<revisionOnScmFailure>0000</revisionOnScmFailure>
					<useLastCommittedRevision>true</useLastCommittedRevision>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<archive>
						<manifestEntries>
							<Implementation-Build>${buildNumber}</Implementation-Build>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<configuration>
							<tasks>
								<echo>.</echo>
								<echo>..........................</echo>
								<echo>Runtime Environment .</echo>
								<echo>..........................</echo>
								<echo>project.build.environment: [ ${project.build.environment}
									]</echo>
								<echo>..........................</echo>
								<echo>.</echo>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>

	</build>

	<profiles>
		<profile>
			<id>loc</id>
			<properties>
				<project.build.environment>loc</project.build.environment>
			</properties>
		</profile>
		<profile>
			<id>dev</id>
			<properties>
				<project.build.environment>dev</project.build.environment>
			</properties>
		</profile>
		<profile>
			<id>qa</id>
			<properties>
				<project.build.environment>qa</project.build.environment>
			</properties>
		</profile>
		<profile>
			<id>prod</id>
			<properties>
				<project.build.environment>prod</project.build.environment>
			</properties>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>javassist</groupId>
			<artifactId>javassist</artifactId>
			<version>3.12.1.GA</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.6</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.16</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.drools</groupId>
			<artifactId>drools-core</artifactId>
			<version>5.5.0.Final</version>
		</dependency>
		<dependency>
			<groupId>org.drools</groupId>
			<artifactId>drools-compiler</artifactId>
			<version>5.5.0.Final</version>
		</dependency>
		<dependency>
			<groupId>com.synodex</groupId>
			<artifactId>synodex-core</artifactId>
			<version>v2.0.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.synodex</groupId>
			<artifactId>synodex-utils</artifactId>
			<version>v2.0.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.synodex</groupId>
			<artifactId>synodexqcai-wf3core</artifactId>
			<version>v2.6.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.synodex</groupId>
			<artifactId>synodex-xml</artifactId>
			<version>v0.0.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.synodex</groupId>
			<artifactId>qermt-utils</artifactId>
			<version>v0.0.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.synodex</groupId>
			<artifactId>wf3excel</artifactId>
			<version>v1.0.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.synodex</groupId>
			<version>v0.0.0.1</version>
			<artifactId>qcaiengine-synidantlr4</artifactId>
		</dependency>
		<dependency>
			<groupId>com.synodex</groupId>
			<artifactId>qermt-wf3excel</artifactId>
			<version>v0.0.0.0</version>
		</dependency>

	</dependencies>
</project>

